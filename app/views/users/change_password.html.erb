<div class="container">
<%= form_for :user, url:password_update_path, method: :put do |f|%>

    <%= f.label :Old_password %>          <%= f.password_field :password,class: "form-control",:required =>true %></br></br>
    <%= f.label :New_password%>  <%= f.password_field :password_new,class: "form-control",:required =>true %></br></br>
          <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %></br>

 <%= f.submit :Submit,:class=>"btn" %>
  <%= link_to "<button class=btn btn-success>Back</button>".html_safe,user_edit_path(current_user.id)%></br>

 <%end%> 
 </div>